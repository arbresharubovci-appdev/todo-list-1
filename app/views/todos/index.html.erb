<div>
  <div>
    <h1>
      Your todo list
    </h1>
  </div>
</div>

<div>
  <div>
    <h2>
      Add a new todo
    </h2>

    <form action="/insert_todo" method="post">
      <div>
        <label for="status_box">
          Describe the task:
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>
      
   

       <button>
        Add to Next Up
      </button>
     
  <div class="next_up">
  <h2>Next Up</h2>
  <a href="/delete_todo/:path_id">Delete</a>

  <div class="in_progress">
  <h2>In Progress</h2>
  <a href="/delete_todo/:path_id">Delete</a>

  <div class="done">
  <h2>Done</h2>
  <a href="/delete_todo/:path_id">Delete</a>

    

      <div>
        <label for="content_box">
          Content
        </label>

        <input type="text" id="content_box" name="query_content">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Add to Next Up
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Status
        </th>

        <th>
          Content
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_todos.each do |a_todo| %>
      <tr>
        <td>
          <%= a_todo.id %>
        </td>

        <td>
          <%= a_todo.status %>
        </td>

        <td>
          <%= a_todo.content %>
        </td>

        <td>
          <%= a_todo.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_todo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_todo.updated_at) %> ago
        </td>

        <td>
          <a href="/todos/<%= a_todo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
